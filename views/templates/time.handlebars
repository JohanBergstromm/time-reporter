<div class="time-item" data-id="{{response._id}}" data-day="{{response.date.day}}">
    <div class="date">
        <p class="d-none">{{response.date.day}}/{{response.date.month}}</p>
        <input type="hidden" class="dayDone" name="day" value="{{response.date.day}}">
        <input type="hidden" class="monthDone" name="month" value="{{response.date.month}}">
    </div>
    <div class="time">
        <p class="m-0">FrÃ¥n: {{response.from.hour}}:{{response.from.minute}} Till: {{response.to.hour}}:{{response.to.minute}}</p>
        <input type="hidden" class="fhDone" name="fromHour" value="{{response.from.hour}}">
        <input type="hidden" class="fmDone" name="fromMin" value="{{response.from.minute}}">
        <input type="hidden" class="thDone" name="toHour" value="{{response.to.hour}}">
        <input type="hidden" class="tmDone" name="toMin" value="{{response.to.minute}}">
    </div>
    {{#if response.add.comment}}
    <div class="comment">
        <p class="m-0">Kommentar: {{response.add.comment}}</p>
        <input type="hidden" class="commentDone" name="comment" value="{{response.add.comment}}">
    </div>
    {{/if}}
    <a class="remove-time btn btn-danger my-2">Ta bort</a>
</div>