<div class="main-wrap time-report">
    <div class="col-12">
        <div class="row">
            <h2>Tidsrapportera</h2>
        </div>
    </div>
    <form class="time-form" method="post">
        <div class="row">
            <div class="col-6">
                <div class="date-wrap">
                    <h4>Datum</h4>
                    <span>M책nad</span>
                    <select id="month" name="month">
                        {{> form-month}}
                    </select>
                    <span>Dag</span>
                    <select id="day" name="day">
                        {{> form-day}}
                    </select>
                </div>
                <div class="d-flex">
                    <div class="from-wrap mr-5">
                        <h4>Fr책n</h4>
                        <span>Timme</span>
                        <select id="fh" name="fromHour">
                            {{> form-hours}}
                        </select>
                        <span>Minut</span>
                        <select id="fm" name="fromMin">
                            {{> form-minutes}}
                        </select>
                    </div>
                    <div class="to-wrap">
                        <h4>Till</h4>
                        <span>Timme</span>
                        <select id="th" name="toHour">
                            {{> form-hours}}
                        </select>
                        <span>Minut</span>
                        <select id="tm" name="toMin">
                            {{> form-minutes}}
                        </select>
                    </div>
                </div>
                <div class="comment-wrap">
                    <h4>Kommentar</h4>
                    <textarea id="comment" name="comment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">L채gg till</button>
            </div>
        </div>
    </form>
    <div class="divider"></div>
    <div class="days">
        {{> days}}
    </div>
    <div class="time-wrap d-flex flex-wrap">
        {{#each times}}
        <div class="time-item col-3" data-id="{{this._id}}" data-day="{{this.date.day}}">
            <div class="date">
                <p class="d-none">{{this.date.day}}/{{this.date.month}}</p>
            </div>
            <div class="time">
                <p class="m-0">Fr책n: {{this.from.hour}}:{{this.from.minute}} Till: {{this.to.hour}}:{{this.to.minute}}</p>
            </div>
            {{#if this.add.comment}}
            <div class="comment">
                <p class="m-0">Kommentar: {{this.add.comment}}</p>
            </div>
            {{/if}}
            <a class="remove-time btn btn-danger my-2">Ta bort</a>
        </div>
        {{/each}}
    </div>
</div>